<div class="document-title clearfix">
  <div class="d-inline-block pr-4 w-md-75" role="header">
    <%= content_tag @as, class: @classes do %>
      <% before_titles.each do |t| %>
        <%= t %>
      <% end %>

      <%= counter -%><%= title -%>

      <% after_titles.each do |t| %>
        <%= t %>
      <% end %>
    <% end %>
  </div>

  <div class="float-md-right pb-2 w-md-25">
    <% actions.each do |action| %>
      <%= action %>
    <% end %>
  </div>
</div>
