<%= form_tag search_action_path, method: :get, class: [@classes[:form], "range_#{@facet_field.key} d-flex justify-content-center"].join(' ') do %>
  <%= render hidden_search_state %>

  <div class="range-limit-input-group">
    <div class="d-flex flex-wrap align-items-end">
      <div class="d-flex flex-column mb-2 mr-2 me-2">
        <%= label_tag(begin_input_name,
              t("blacklight.range_limit.range_begin_short"),
              class: 'text-muted mb-1',
              for: begin_input_id
        ) %>
        <%= number_field_tag(begin_input_name,
              begin_value_default,
              id: begin_input_id,
              min: range_config[:min_value],
              max: range_config[:max_value],
              class: "form-control form-control-sm range_begin"
        ) %>
      </div>

      <div class="d-flex flex-column mb-2 mr-2 me-2">
        <%= label_tag(end_input_name,
              t("blacklight.range_limit.range_end_short"),
              class: 'text-muted mb-1',
              for: end_input_id
        ) %>
        <%= number_field_tag(end_input_name,
              end_value_default,
              id: end_input_id,
              min: range_config[:min_value],
              max: range_config[:max_value],
              class: "form-control form-control-sm range_end"
        ) %>
      </div>
      <div class="d-flex justify-content-end mb-2 mr-2">
        <%= submit_tag(
          t('blacklight.range_limit.submit_limit'),
          class: "#{@classes[:submit]} px-3",
          'aria-label': "#{t('blacklight.range_limit.submit_limit')} #{@facet_field.label} range",
          name: nil
        ) %>
      </div>
    </div>
  </div>
<% end %>
