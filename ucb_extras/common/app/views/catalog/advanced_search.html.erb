<% @page_title = t('blacklight.advanced_search.page_title', application_name: application_name) %>

<div class="advanced-search-form col-sm-12">
  <div class="advanced page-header">
    <h1>
      <%= t('blacklight.advanced_search.form.title') %>
    </h1>
    <%= link_to t('blacklight.advanced_search.form.start_over_html'),
        request.path,
        :class =>"btn btn-secondary advanced-search-start-over",
        id: "advanced-search-start-over-top"
    %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= render 'advanced_search_form' %>
    </div>

    <div class="col-md-4">
      <%= render "advanced_search_help" %>
    </div>
  </div>
</div>
