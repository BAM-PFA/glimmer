<% view_config = local_assigns[:view_config] || blacklight_config&.view_config(document_index_view_type) %>

<div id="documents" class="<%= (Array(view_config.classes) + ["documents-#{view_config.key}"]).join(' ') %>" tabindex="-1">
  <% document_presenters = documents.map { |doc| document_presenter(doc) } %>
  <div class="grid">
    <%= render((view_config.preview_component || Blacklight::Gallery::SlideshowPreviewComponent).with_collection(document_presenters)) %>
  </div>

  <%= render layout: 'slideshow_modal' do %>
    <div id="slideshow" class="slideshow-presenter" tabindex="-1">
      <!-- Wrapper for slides -->
      <div id="slideshow-inner" aria-roledescription="slideshow" class="slideshow-inner" role="region">
        <%= render view_config.document_component.with_collection(document_presenters, counter_offset: @response&.start || 0) %>
      </div>

      <!-- Controls -->
      <a
        class="left carousel-control prev"
        href="#slideshow"
        data-slide="prev"
        data-bs-slide="prev"
        aria-controls="slideshow-inner"
      >
        <%= render Blacklight::Gallery::Icons::ChevronLeftComponent.new(
              aria_hidden: true,
              additional_options: { label_context: 'previous_image' }
        ) %>
        <span class="sr-only visually-hidden">previous image</span>
      </a>
      <a
        class="right carousel-control next"
        href="#slideshow"
        data-slide="next"
        data-bs-slide="next"
        aria-controls="slideshow-inner"
      >
        <%= render Blacklight::Gallery::Icons::ChevronRightComponent.new(
              aria_hidden: true,
              additional_options: { label_context: 'next_image' }
        ) %>
        <span class="sr-only visually-hidden">next image</span>
      </a>

      <div class="controls text-center">
        <button
          class="btn btn-sm btn-link"
          data-behavior="pause-slideshow"
          aria-controls="slideshow-inner"
          aria-label="<%= t('blacklight_gallery.catalog.slideshow.pause') %>"
        >
          <%= render Blacklight::Gallery::Icons::PauseSlideshowComponent.new aria_hidden: true %>
        </button>
        <button
          class="btn btn-sm btn-link"
          data-behavior="start-slideshow"
          aria-controls="slideshow-inner"
          aria-label="<%= t('blacklight_gallery.catalog.slideshow.start') %>"
        >
          <%= render Blacklight::Gallery::Icons::StartSlideshowComponent.new aria_hidden: true %>
        </button>
      </div>
    </div>
  <% end %>
</div>
