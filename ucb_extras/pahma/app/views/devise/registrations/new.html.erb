<div class="devise login-container mx-auto">
  <h1>Sign up</h1>

  <div class="signup-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div aria-live="assertive" role="alert"><%= render "devise/shared/error_messages", resource: resource %></div>
      <div class="field">
        <%= f.label :email, class: "d-block" %>
        <%= f.email_field :email,
              aria: {
                errormessage: resource.errors.has_key?(:email) ? 'user-email-error' : nil,
                invalid: resource.errors.has_key?(:email),
                required: true
              },
              autocomplete: "email",
              autofocus: true,
              class: "form-control"
        %>
      </div>
      <div class="field">
        <%= f.label :password%>
        <% if @minimum_password_length %>
          <span id="password-minimum" class="ml-1 text-muted">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password,
              aria: {
                describedby: @minimum_password_length ? 'password-minimum' : nil,
                errormessage: resource.errors.has_key?(:password) ? 'user-password-error' : nil,
                invalid: resource.errors.has_key?(:password),
                required: true
              },
              autocomplete: "new-password",
              class: "form-control"
        %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "d-block" %>
        <%= f.password_field :password_confirmation,
              aria: {
                errormessage: resource.errors.has_key?(:password_confirmation) ? 'user-password_confirmation-error' : nil,
                invalid: resource.errors.has_key?(:password_confirmation),
                required: true
              },
              autocomplete: "new-password",
              class: "form-control"
        %>
        </div>
      </div>
      <div class="actions pt-1 pb-3">
        <%= f.submit "Sign up", class: "btn btn-primary px-5 w-100 w-sm-auto" %>
      </div>
    <% end %>
    <div class="py-2"><%= render "devise/shared/links" %></div>
  </div>
</div>
