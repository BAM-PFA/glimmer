<%= _artist = nil %>
<%# default partial to display solr document fields in catalog show view -%>
<div class="row">
  <div class="col-12 col-md-6">
    <!-- images -->
    <% unless @document[:blob_ss].nil? %>
      <div class="show-gallery">
        <% @document[:blob_ss].each do |image| %>
          <div class="gallery-item">
            <img
              src="<%= helpers.render_csid(image, 'Medium') %>"
              alt="<%= helpers.render_alt_text(image, {:document => @document}) %>"
              class="show-image"
            />
          </div>
        <% end %>
      </div>
    <% else %>
     <p>Image not available</p>
    <% end %>
  </div>
  <!-- metadata -->
  <div class="col-12 col-md-6">
    <dl class="<%= @classes %>">
      <% @doc_presenter.fields_to_render.each do |field_name, field| -%>
        <% unless field_name == "blob_ss" %>
          <dt class="col-4 blacklight-<%= field_name.parameterize %>">
            <%= field.label %>:
          </dt>
          <% if field_name == 'artistcalc_s' %>
            <% _artist = @doc_presenter.field_value field %>
            <% _artist_link = helpers.make_artist_search_link(_artist) %>
            <dd class="col-8 blacklight-<%= field_name.parameterize %>"><a href="<%= _artist_link %>"><%= @doc_presenter.field_value field %></a></dd>
          <% else %>
            <dd class="col-8 blacklight-<%= field_name.parameterize %>"><%= @doc_presenter.field_value field %></dd>
          <% end %>
        <% end %>
      <% end %>
    </dl>
  </div>
</div>

<% unless _artist.nil? %>
  <section aria-labelledby="show-preview-title" class="row show-preview-container">
    <%= render :partial => '/catalog/show_preview', :locals => {:artist => _artist} %>
  </section>
<% end %>
