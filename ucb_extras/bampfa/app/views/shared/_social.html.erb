<%# = simple_format @document.to_yaml %>
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content="@bampfa"/>
<% if @document %>
  <% doc_title = @document['title_s'] %>
  <meta property="og:title"       content="<%= doc_title %>" />
  <meta property="og:description" content="<%= @document['artistcalc_s'] %> <%= @document['datemade_s'] %>" />
  <% unless @document['blob_ss'].nil? %>
    <meta property="og:image"     content="https://webapps.cspace.berkeley.edu/bampfa/imageserver/blobs/<%= @document['blob_ss'].join('')[0...23] %>/derivatives/Medium/content"/>
    <meta property="twitter:image:alt" content="Image from <%= doc_title %>"/>
  <% else %>
    <meta property="og:image"     content="/site_image.jpg" />
    <meta property="twitter:image:alt" content="Exterior of BAMPFA museum building showing outdoor screen"/>
  <% end %>
  <meta property="og:url"         content="https://collection.bampfa.berkeley.edu/catalog/<%= @document['id'] %>" />
  <meta property="og:type"        content="art" />
<% else %>
  <meta property="og:url"         content="https://collection.bampfa.berkeley.edu/"/>
  <meta property="og:title"       content="BAMPFA Art Collection" />
  <meta property="og:creator"     content="UC Berkeley Art Museum and Pacific Film Archive" />
  <meta property="og:description" content="The UC Berkeley Art Museum and Pacific Film Archive brings the rich artistic resources of the UC Berkeley campus to the broader public" />
  <meta property="og:image"       content="/site_image.jpg" />
  <meta property="twitter:image:alt" content="Exterior of BAMPFA museum building showing outdoor screen"/>
<% end %>
